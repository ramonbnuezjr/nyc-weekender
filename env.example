# NYC Chatbot Environment Configuration
# Copy this file to .env.local and fill in your actual API keys

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# OpenWeatherMap Weather API
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_PROVIDER=openweather
OPENWEATHER_BASE=https://api.openweathermap.org/data/2.5

# NYC Open Data (Socrata)
NYC_OPEN_DATA_APP_TOKEN=your_nyc_open_data_app_token_here

# Application Configuration
NYC_TIMEZONE=America/New_York
DEFAULT_LAT=40.7812
DEFAULT_LON=-73.9665
MODEL_ID=gemini-2.0-flash

# Optional: NYC Open Data App Token
# Get your free app token at: https://dev.socrata.com/register
# This helps avoid rate limiting and provides better API access
